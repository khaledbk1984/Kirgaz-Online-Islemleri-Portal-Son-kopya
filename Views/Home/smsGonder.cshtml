<div>

    <!-- Parametre Değerleri ve Tarih Değerleri - Başladı -->
    @using (Html.BeginForm("smsGonder", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">SMS Formu</h3>
            </div>

            <form class="SMS Gonderme">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="txtCepTEL" class="col-sm-2 col-form-label">Telefon No</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtCepTEL" name="txtCepTEL" placeholder="Telefon No Giriniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtSMSMetni" class="col-sm-2 col-form-label">SMS Metni</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtSMSMetni" name="txtSMSMetni" placeholder="SMS Metni Yaziniz">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">Beni Hatirla</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Gonder</button>

                </div>

            </form>
        </div>
    }

</div>
